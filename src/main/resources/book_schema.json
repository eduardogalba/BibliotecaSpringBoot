{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Libro",
    "type": "object",
    "properties": {
	"titulo": {
	    "title": "Titulo del libro.",
	    "type": "string"
	},
	"autores": {
	    "title": "Autor/res del libro.",
	    "type": "string"
	},
	"edicion": {
		"title": "Edición del libro.",
		"type": "string"
	},
	"isbn": {
	    "title": "Código ISBN del libro.",
	    "description": "Identificador único del libro.",
	    "type": "string",
	    "pattern": "^(?=(?:[^0-9]*[0-9]){10}(?:(?:[^0-9]*[0-9]){3})?$)[\\d-]+$",
	    "maxLength": 20
	},
	"editorial": {
	    "title": "Editorial del libro.",
	    "type": "string"
	},
	"volumenes": {
		"tile": "Unidades disponibles en la biblioteca.",
		"type":"integer"
	},
	"prestados": {
		"tile": "Unidades prestadas.",
		"type":"integer"
	}
    },
    "required": ["titulo", "autores", "edicion", "isbn", "editorial"]
}
